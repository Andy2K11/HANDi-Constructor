<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox
        fx:id="root" 
        fx:controller="uk.co.corductive.msc.ui.tasks.AbstractTaskController"
        xmlns:fx="http://javafx.com/fxml"
        stylesheets="">
    <Label 
        text="Task 1" />
    <GridPane 
            fx:id="grid"
            alignment="center"
            minHeight="10"
            minWidth="600"
            hgap="10"
            vgap="10"
            >
        <padding>
            <Insets
                top="25"
                right="25"
                bottom="10"
                left="25" 
                />
        </padding>
        <Button 
            text="Close" 
            onAction="#handleCloseButton" 
            GridPane.columnIndex="0"
            GridPane.rowIndex="4" />
    </GridPane>
</VBox>

